#!/bin/bash
#
#	Copyright (c) openheap, uplusware
#	uplusware@gmail.com
#
if [ `id -u` -ne 0 ]; then
        echo "You need root privileges to run this script"
        exit 1
fi
path=$(dirname $0)
oldpwd=$(pwd)
cd ${path}
path=$(pwd)

if [ $# = 2 ]
then
	${path}/eriseutil -a $1 $2 -g -U
	
else
	echo "Usage:eriseaddgroup <group name> <alias>"
fi

cd ${oldpwd}